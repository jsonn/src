h_check()
{
	atf_check -o file:"$(atf_get_srcdir)/d_$1.out" -x \
	    "make -k -f $(atf_get_srcdir)/d_$1.mk 2>&1 | sed -e 's,$(atf_get_srcdir)/d_,,'"
}

tc:comment:Checks comments (PR/17732, PR/30536)
tc:cond1:Checks conditionals (PR/24420)
tc:dotwait:Checks .WAIT
tc:export:Checks .export of provided variables
tc:export_all:Checks .export of all global variables
tc:moderrs:Checks correct handling of errors in modifiers usage
tc:modmatch:Checks modifier :M
tc:modmisc:Checks modifiers specified in variables
tc:modorder:Checks modifier :Ox
tc:modts:Checks modifier :ts
tc:modword:Checks modifier :[]
tc:posix:Checks conformance to POSIX
tc:qequals:Checks operator ?=
tc:ternary:Checks ternary modifier
tc:varcmd:Checks behavior of command line variable assignments

atf_init_test_cases()
{
tc_list
}
