#
# -DRET_TYPE_SRAND_IS_VOID	if srand() returns void not int
# -DHAVE_SYS_NERR		if you have sysnerr in <errno.h> or <stdio.h>
# -DHAVE_SYS_ERRLIST		if you have sys_errlist in <errno.h> or
