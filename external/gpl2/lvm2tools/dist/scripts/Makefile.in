srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

include $(top_srcdir)/make.tmpl

install:
	$(INSTALL) -D $(OWNER) $(GROUP) -m 555 $(STRIP) lvm_dump.sh \
		$(sbindir)/lvmdump
ifeq ("@FSADM@", "yes")
	$(INSTALL) -D $(OWNER) $(GROUP) -m 555 $(STRIP) fsadm.sh \
		$(sbindir)/fsadm
endif
