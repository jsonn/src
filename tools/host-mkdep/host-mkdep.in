APPEND=false
CPPFLAGS=
NEWEXT=.o
OUTFILE=.depend
SRCS=

while [ $# -gt 0 ]; do
	case "$1" in
	-a)	APPEND=true; shift;;

	-f)	OUTFILE=$2; shift; shift;;

	-p)	NEWEXT=; shift;;

	*)	break;;
	esac
done

if [ $# = 0 ] ; then
	echo "usage: $0 [-a] [-p] [-f makefile] [flags] file ..."
	exit 1
fi

while [ $# -gt 0 ]; do
	case "$1" in
	-L)		shift; shift;; # takes an arg, but ignored

	-c|-[lLMOW]*)	shift;; # takes no extra args

	-[IDU]*)	CPPFLAGS="$CPPFLAGS $1"; shift;;

	-[IDU]|-include)
			CPPFLAGS="$CPPFLAGS $1 $2"; shift; shift;;

	-*)		echo "$0: unknown option: $1"; exit 1;; # all other -options

	*)		SRCS="$SRCS $1"; shift;; # source file
	esac
done

TMP=/tmp/mkdep$$
rm -f $TMP

trap 'rm -f $TMP; exit 1' 1 2 3 13 15

for f in $SRCS; do
	@CPP@ $CPPFLAGS $f | @AWK@ '
		BEGIN {
			objfile = "'$f'"
			sub(/^.*\//, "", objfile)
			sub(/\.(c|cc|m)$/, "'$NEWEXT'", objfile)
		}
		/^#/ {
			# Be as tolerant as possible.
			sub(/^#(line)? [ 0-9]*\"?/, "")
			sub(/^#(pragma).*/, "")
			sub(/^<.*/, "")
			sub(/\".*$/, "")
			sub(/ [ 0-9]*$/, "")

			if ($0 in seenfiles) next
			if ($0 ~ /y.tab.c/) next

			seenfiles[$0] = 1
			print objfile ": " $0
		}
	' >>$TMP
done

if $APPEND; then
	cat $TMP >>$OUTFILE
else
	cat $TMP >$OUTFILE
fi

rm -f $TMP
exit 0
