#!/bin/sh
#
#	$NetBSD: hextest,v 1.1.1.1.2.1 1998/07/23 00:42:51 mellon Exp $
#
if [ -f /usr/ucb/touch ] ; then
	TOUCH=/usr/ucb/touch
else
	if [ -f /usr/bin/touch ] ; then
		TOUCH=/usr/bin/touch
	else
		if [ -f /bin/touch ] ; then
			TOUCH=/bin/touch
		fi
	fi
fi

if [ -f ../ipftest ] ; then
	IPFTEST=../ipftest
else
	if [ -f /usr/sbin/ipftest ] ; then
		IPFTEST=/usr/sbin/ipftest
	else
		IPFTEST=ipftest
	fi
fi

echo "$1...";
/bin/cp /dev/null results/$1
( while read rule; do
	echo "$rule" | $IPFTEST -br - -Hi input/$1 >> results/$1;
done ) < regress/$1
cmp expected/$1 results/$1
status=$?
if [ $status = 0 ] ; then
	$TOUCH $1
fi
exit $status
