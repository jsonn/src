#!/bin/sh
#
# $NetBSD: mtest,v 1.2.4.1 2004/08/15 14:51:48 tron Exp $
#
TESTDIR=$1
shift

format=$2
mkdir -p results
# multiple rules at the same time

if [ -f /usr/ucb/touch ] ; then
	TOUCH=/usr/ucb/touch
else
	if [ -f /usr/bin/touch ] ; then
		TOUCH=/usr/bin/touch
	else
		if [ -f /bin/touch ] ; then
			TOUCH=/bin/touch
		fi
	fi
fi
echo "$1...";

/bin/cp /dev/null results/$1

ipftest -F $format -Rbr ${TESTDIR}/regress/$1 -i ${TESTDIR}/input/$1 > results/$1
if [ $? -ne 0 ] ; then
	exit 1
fi
echo "--------" >> results/$1

cmp ${TESTDIR}/expected/$1 results/$1
status=$?
if [ $status -ne 0 ] ; then
	exit $status
fi
cmp ${TESTDIR}/expected/$1 results/$1
status=$?
if [ $status -ne 0 ] ; then
	exit $status
fi
$TOUCH $1
exit 0
