#!/bin/sh
#
# $NetBSD: hextest,v 1.2.4.1 2004/08/15 14:51:48 tron Exp $
#
TESTDIR=$1
shift

if [ -f /usr/ucb/touch ] ; then
	TOUCH=/usr/ucb/touch
else
	if [ -f /usr/bin/touch ] ; then
		TOUCH=/usr/bin/touch
	else
		if [ -f /bin/touch ] ; then
			TOUCH=/bin/touch
		fi
	fi
fi
echo "$1...";
/bin/cp /dev/null results/$1
( while read rule; do
	echo "$rule" | ipftest -br - -F hex -i ${TESTDIR}/input/$1 >> results/$1;
	if [ $? -ne 0 ] ; then
		exit 1;
	fi
	echo "--------" >> results/$1
done ) < ${TESTDIR}/regress/$1
cmp ${TESTDIR}/expected/$1 results/$1
status=$?
if [ $status = 0 ] ; then
	$TOUCH $1
fi
exit $status
