# openssh2netbsd:  convert a openssh source tree into netbsd openssh tree

### Remove CVS
find . -name CVS -print | xargs rm -r

### Remove Makefile and subdirs
rm -r Makefile Makefile.inc
rm -r lib ssh-add ssh scp ssh-agent sshd sftp-server ssh-keygen sftp ssh-keyscan ssh-keysign

### add NetBSD RCS tag
for i in *.c *.h; do
	echo $i
	ex $i <<EOF
1i
/*	\$NetBSD\$	*/
.
w
q
EOF
done

for i in *.[0-9] *.ms; do
	echo $i
	ex $i <<EOF
1i
.\"	\$NetBSD\$
.
w
q
EOF
done

for i in ssh*_config; do
	echo $i
	ex $i <<EOF
1i
#	\$NetBSD\$
.
w
q
EOF
done

exit 0
