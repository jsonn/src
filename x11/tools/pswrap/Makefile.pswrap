.SUFFIXES: .psw .c .h

PSWRAPDIR!=	cd ${NETBSDSRCDIR}/x11/tools/pswrap && ${PRINTOBJDIR}
PSWRAP=		${PSWRAPDIR}/pswrap

${PSWRAP}:
	(cd ${NETBSDSRCDIR}/x11/tools/pswrap && ${MAKE})

.psw.c: ${PSWRAP}
	${_MKTARGET_CREATE}
	rm -f ${.TARGET}
	${PSWRAP} -a -o ${.TARGET} -h ${.TARGET:.c=.h} ${.IMPSRC}

.psw.h: ${PSWRAP}
	${_MKTARGET_CREATE}
	rm -f ${.TARGET}
	${PSWRAP} -a -f ${.TARGET} -h ${.TARGET} ${.IMPSRC} >/dev/null
