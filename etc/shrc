ll(){ ls -l ${1+"$@"}; }

case "$-" in *i*)
	if /bin/test -z "${HOST}"; then
		HOST=`hostname`
	fi
	PS1="${HOST%%.*}$PS1"
	set -o emacs
	# This file is used by shells that might not support
	# set -o tabcomplete, so check before trying to use it.
	( set -o tabcomplete 2>/dev/null ) && set -o tabcomplete
	;;
esac
