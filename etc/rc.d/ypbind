#!/bin/sh
#
# $NetBSD: ypbind,v 1.3.4.1 2000/10/02 01:08:59 lukem Exp $
#

# PROVIDE: ypbind
# REQUIRE: ypserv

. /etc/rc.subr

name="ypbind"
rcvar=$name
command="/usr/sbin/${name}"
start_precmd="ypbind_precmd"

ypbind_precmd()
{
	_domain=`domainname`
	if [ -z "$_domain" ]; then
		warn "domainname(1) is not set."
		return 1
	fi
}

load_rc_config $name
run_rc_command "$1"
