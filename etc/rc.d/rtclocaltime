#!/bin/sh
#
# $NetBSD: rtclocaltime,v 1.7.18.1 2009/05/13 19:18:03 jym Exp $
#

# PROVIDE: rtclocaltime
# REQUIRE: mountcritremote
# BEFORE:  ntpdate ntpd

$_rc_subr_loaded . /etc/rc.subr

name="rtclocaltime"
rcvar=$name
start_cmd="rtclocaltime_start"
stop_cmd=":"

rtclocaltime_start()
{
	rtcoff=$(awk 'BEGIN{
		offset = -int(strftime("%z"));
		if (offset < 0) {
			sign = -1;
			offset = -offset;
		} else {
			sign = 1;
		}
		minutes = offset % 100;
		hours = int(offset / 100);
		offset = sign * (hours * 60 + minutes);
		print offset;
		exit(0);
	}')
	echo "Setting RTC offset to ${rtcoff}."
	sysctl -qw kern.rtc_offset=${rtcoff}
}

load_rc_config $name
run_rc_command "$1"
