#!/bin/sh
#
# $NetBSD: root,v 1.3.36.1 2009/05/13 19:18:03 jym Exp $
#

# PROVIDE: root
# REQUIRE: fsck_root

$_rc_subr_loaded . /etc/rc.subr

name="root"
start_cmd="root_start"
stop_cmd=":"

root_start()
{
	umount -a >/dev/null 2>&1
	mount /
	rm -f /fastboot
}

load_rc_config $name
run_rc_command "$1"
