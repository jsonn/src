#!/bin/sh
#
# $NetBSD: pflogd,v 1.2.28.1 2008/05/31 14:43:12 peter Exp $
#

# PROVIDE: pflogd
# REQUIRE: pf
# BEFORE:  SERVERS

$_rc_subr_loaded . /etc/rc.subr

name="pflogd"
rcvar=$name
command="/sbin/${name}"
start_precmd="/sbin/ifconfig pflog0 create up"
pidfile="/var/run/${name}.pid"

load_rc_config $name
run_rc_command "$1"
