#!/bin/sh
#
# $NetBSD: yppasswdd,v 1.3.2.1 2000/06/23 15:46:03 minoura Exp $
#

# PROVIDE: yppasswdd
# REQUIRE: ypserv ypbind

. /etc/rc.subr

name="yppasswdd"
command="/usr/sbin/rpc.${name}"
required_vars="rpcbind ypserv"
start_precmd="yppasswdd_precmd"

yppasswdd_precmd()
{
	_domain=`domainname`
	if [ -z "$_domain" ]; then
		warn "domainname(1) is not set; ${name} not started"
		return 1
	fi
}

load_rc_config $name
run_rc_command "$1"
