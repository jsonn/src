#!/bin/sh
#
# $NetBSD: yppasswdd,v 1.4.2.1 2000/10/02 01:09:27 lukem Exp $
#

# PROVIDE: yppasswdd
# REQUIRE: ypserv ypbind

. /etc/rc.subr

name="yppasswdd"
rcvar=$name
command="/usr/sbin/rpc.${name}"
required_vars="rpcbind ypserv"
start_precmd="yppasswdd_precmd"

yppasswdd_precmd()
{
	_domain=`domainname`
	if [ -z "$_domain" ]; then
		warn "domainname(1) is not set."
		return 1
	fi
}

load_rc_config $name
run_rc_command "$1"
