#!/bin/sh
#
# $NetBSD: ntpdate,v 1.3.4.3 2000/10/02 01:09:51 lukem Exp $
#

# PROVIDE: ntpdate
# REQUIRE: NETWORK syslogd

. /etc/rc.subr

name="ntpdate"
rcvar=$name
start_cmd="ntpdate_start"
stop_cmd=":"

ntpdate_start()
{
	if [ -z "$ntpdate_hosts" ]; then
		ntpdate_hosts=`awk '
		    /^server[ \t]*127.127/	{next}
		    /^(server|peer)/		{print $2}
		' </etc/ntp.conf`
	fi
	if [ -n "$ntpdate_hosts"  ]; then
		echo "Setting date via ntp."
		ntpdate $ntpdate_flags $ntpdate_hosts
	fi
}

load_rc_config $name
run_rc_command "$1"
