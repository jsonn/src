#!/bin/sh
#
# $NetBSD: accounting,v 1.2.4.1 2000/10/02 01:07:16 lukem Exp $
#

# PROVIDE: accounting
# REQUIRE: mountall

. /etc/rc.subr

name="accounting"
rcvar=$name
start_cmd="accounting_start"
stop_cmd="accounting_stop"

accounting_start()
{
	if [ -f /var/account/acct ]; then
		echo "Turning on accounting."
		/usr/sbin/accton /var/account/acct
	fi
}

accounting_stop()
{
	echo "Turning off accounting."
	/usr/sbin/accton
}

load_rc_config $name
run_rc_command "$1"
