#!/bin/sh
#
#	$NetBSD: veriexec,v 1.3.2.1 2005/06/10 14:47:29 tron Exp $
#

# PROVIDE: veriexec
# REQUIRE: mountcritlocal
# BEFORE:  securelevel

$_rc_subr_loaded . /etc/rc.subr

name="veriexec"
rcvar=$name
start_cmd="veriexec_start"

veriexec_start()
{
	echo -n "Loading fingerprints..."
	/sbin/veriexecctl load /etc/signatures
	echo " done."
}

load_rc_config $name
run_rc_command "$1"
