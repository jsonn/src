#!/bin/sh
#
# $NetBSD: lkm3,v 1.3.4.2 2000/10/02 01:09:24 lukem Exp $
#

# PROVIDE: aftermountlkm
# REQUIRE: mountall

. /etc/rc.subr

name="lkm3"
rcvar="lkm"
start_cmd="do_lkm3 start"
stop_cmd="do_lkm3 stop"

do_lkm3()
{
	#	(un)load kernel modules specified in /etc/lkm.conf
	#
	if [ -f /etc/rc.lkm ]; then
		lkmstage=AFTERMOUNT
		set $1 ; . /etc/rc.lkm
	fi
}

load_rc_config lkm
run_rc_command "$1"
