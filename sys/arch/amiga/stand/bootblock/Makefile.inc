.else
AOUT2BBOBJDIR=	${AOUT2BBDIR}
.endif
RELOC2BB=	${AOUT2BBOBJDIR}/aout2bb

${RELOC2BB}:
	@cd ${AOUT2BBDIR} && ${MAKE} depend && ${MAKE}
.endif

