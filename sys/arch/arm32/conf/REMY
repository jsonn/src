wd*     at wdc? drive ?

# Floppy disk controller
fdc0    at mainbus? base 0x00210fc0 irq 12 dack 0x00002000
fd0     at fdc? drive ?

# kbd via IOMD
kbd0	at mainbus? base 0x00000000

# quadrature mouse
