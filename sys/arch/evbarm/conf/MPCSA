#config        netbsd-md0    root on md0 type ffs


# The main bus device
mainbus0    at root

# The boot cpu
cpu0		at mainbus?

# peripheral bus:
apb0		at mainbus?

# On-chip interrupt controller
at91_aic0	at apb? addr 0xfffff000 size 0x200

# On-chip timer
stmr0		at apb? addr 0xfffffd00 size 0x200 intr 1

# On-chip debug UART
at91_dbgu0	at apb? addr 0xfffff200 size 0x200 intr 1

# On-chip UARTs
#at91_usart0 at apb? ...

# On-chip ethernet
emac0		at apb? addr 0xfffbc000 size 0x4000 intr 24

# General purpose I/O
at91_gpio0	at apb? addr 0xfffff400 size 0x800 intr 2 # -4
gpio*		at at91_gpio?

# On-chip CF interface
at91_cf0	at apb? addr 0x50000000 size 0x900000 intr 4
pcmcia0		at at91_cf0 

# On-chip USB 1.1
ohci*		at apb? addr 0x00300000 size 0x100000 intr 23
usb*		at ohci?
uhub*		at usb?
uhub*		at uhub? port ? configuration ? interface ?

# USB Mass Storage
umass*		at uhub? port ? configuration ? interface ?
scsibus*	at umass?

# SCSI devices
sd*		at scsibus? target ? lun ?	# SCSI disk drives

# PHY
ukphy0	at emac0 phy 1
ukphy*	at aue? phy ?		# generic unknown PHYs


options 	PCMCIAVERBOSE	# verbose PCMCIA configuration messages
options 	SCSIVERBOSE	# human readable SCSI error messages
options 	USBVERBOSE	# verbose USB device autoconfig messages


# USB Ethernet adapters
aue*    at uhub? port ?         # ADMtek AN986 Pegasus based adapters
axe*    at uhub? port ?         # ASIX AX88172 based adapters
cue*    at uhub? port ?         # CATC USB-EL1201A based adapters
kue*    at uhub? port ?         # Kawasaki LSI KL5KUSB101B based adapters
udav*   at uhub? port ?         # Davicom DM9601 based adapters
url*    at uhub? port ?         # Realtek RTL8150L based adapters

# Serial adapters
uplcom* at uhub? port ?         # I/O DATA USB-RSAQ2 serial adapter
ucom*   at uplcom? portno ?

# USB Generic driver
ugen*   at uhub? port ?


# PCMCIA IDE controllers
wdc*	at pcmcia? function ?

# ATA (IDE) bus support
atabus*	at wdc? channel ?

wd*	at atabus? drive ? flags 0x0000

# Pseudo-Devices

