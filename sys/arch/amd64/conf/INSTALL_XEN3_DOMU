# $NetBSD: INSTALL_XEN3_DOMU,v 1.4.2.1 2008/03/24 07:14:52 keiichi Exp $
#
#	INSTALL_XEN3_DOMU - Installation kernel for Xen 3/DomU.
#
#	This kernel is derived from XEN3_DOMU with additional memory disk
#	options.

include	"arch/amd64/conf/XEN3_DOMU"

#ident 		"INSTALL-$Revision: 1.4.2.1 $"

options 	MEMORY_DISK_HOOKS
options 	MEMORY_DISK_IS_ROOT     # force root on memory disk
options 	MEMORY_DISK_SERVER=0    # no userspace memory disk support
options 	MEMORY_DISK_ROOT_SIZE=10000     # size of memory disk, in blocks
