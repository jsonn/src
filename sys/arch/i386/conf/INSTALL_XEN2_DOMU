# INSTALL_XEN2_DOMU,v 1.12.10.2 2008/01/09 01:46:29 matt Exp
#
#	INSTALL_XEN2_DOMU - Installation kernel for Xen 2/DomU.
#
#	This kernel is derived from XEN2_DOMU with additional memory disk
#	options.

include	"arch/i386/conf/XEN2_DOMU"

#ident 		"INSTALL-$Revision: 1.12.10.3 $"

options 	MEMORY_DISK_HOOKS
options 	MEMORY_DISK_IS_ROOT     # force root on memory disk
options 	MEMORY_DISK_SERVER=0    # no userspace memory disk support
options 	MEMORY_DISK_ROOT_SIZE=10000     # size of memory disk, in blocks
