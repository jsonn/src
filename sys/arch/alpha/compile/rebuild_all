#!/bin/sh -
#
# $NetBSD: rebuild_all,v 1.7.2.2 1997/08/12 06:08:23 cgd Exp $

cflist=`cd ../conf ; find . -type f ! -name "*[a-z]*" ! -name ".*" | \
    sed -e 's,^\./,,'`

docmd()
{

	echo "    ===> $*"
#	echo "        eval ($*)"
	eval "($*)"
	echo "    <==="
}

docf()
{
	echo "===> $1"
	(
		# docmd "cd ../conf ; config $cf" 
		cd $cf
		# docmd "time make -k clean"
		# docmd "time make -k depend"
		docmd "time make -k"
	)
	echo "<==="
	echo ""
}

for cf in $cflist; do
	docf $cf
done
